{
  "name": "ROS2 Jazzy Base Dev Container",
  "build": {
    "dockerfile": "Dockerfile",                       // 'Dockerfile'라는 파일명에서 지정된 docker image를 사용한다.
    "context": ".",                                   // 'Dockerfile' path
    "platform": "linux/amd64"                         // platform
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-iot.vscode-ros"                              // Vscode에서 자동으로 설치할 extension
  ],
  "remoteUser": "root",                              // container 접속 시 사용할 사용자. 일반적으로 root
  "forwardPorts": [11311]
}
